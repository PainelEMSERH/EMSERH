@tailwind components;

@layer components {
  /* Typography */
  .h1 { @apply text-4xl md:text-5xl font-bold tracking-tight; }
  .h2 { @apply text-3xl md:text-4xl font-semibold tracking-tight; }
  .h3 { @apply text-2xl md:text-3xl font-semibold; }

  /* Buttons */
  .btn { @apply inline-flex items-center justify-center rounded-lg leading-5 transition border border-transparent font-medium; }
  .btn-sm { @apply px-3 py-1.5 text-sm shadow-sm; }
  .btn-xs { @apply px-2 py-1 text-xs shadow-sm; }
}
